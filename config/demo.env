# Demo application connectivity
FRONTEND_PORT=3010
FRONTEND_URL=http://localhost:3010/#/
API_HOST=localhost
API_PORT=3011
API_BASE_URL=http://localhost:3011/api
API_HEALTHCHECK=http://localhost:3011/api/articles

# Database connectivity (sqlite by default)
DB_DIALECT=sqlite
DB_STORAGE=./demo-app/realworld.sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=conduit_local
DB_USER=conduit
DB_PASSWORD=conduit

# Authentication defaults for seeded users
DEFAULT_PASSWORD=Password123!

# Ollama configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60
USE_FAKE_OLLAMA=0

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=false
LOG_FILE_NAME=test.log
LOG_DIR=logs

# Internal service health checks
BACKEND_HEALTH_ENDPOINT=http://localhost:3011/api/articles
FRONTEND_HEALTH_ENDPOINT=http://localhost:3010/#/
DB_HEALTH_QUERY='SELECT 1;'

# JWT secret fallback used when generating backend .env
JWT_KEY=supersecretkey
